<h1>Burgers!</h1>

<h2>Burgers to Eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger/burger-window eat=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers You've Eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger/burger-window eat=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Buger Type:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
</form>